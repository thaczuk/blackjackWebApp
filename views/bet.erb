<div class="hero-unit">
  <h3>How much would you like to bet</h3>
  <p><%= session[:player_name] %> has $<%= session[:player_pot].to_i %></p>
  <div class="row-fluid">
    <div class="span12">
      <form action='/bet' method="post" >
        <input type="text" name="amount_bet" placeholder="$$$" />
        <button type="submit" class="btn btn-mini">Submit</button>
      </form>
    </div>
  </div>
</div>